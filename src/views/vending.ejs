<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PADi || Vending <%= platform.name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="/assets/css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.min.css"
      integrity="sha512-MqL4+Io386IOPMKKyplKII0pVW5e+kb+PI/I3N87G3fHIfrgNNsRpzIXEi+0MQC0sR9xZNqZqCYVcC61fL5+Vg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer" />
  </head>
  <body>
    <div class="max-width" style="position: relative; min-height: 100vh">
      <div class="content m-3">
        <div class="navbar w-100">
          <img src="/assets/img/LOGO.svg" class="img-fluid w-50" alt="" />
        </div>
        <div class="card shadow border-0 rounded-4 mt-3">
          <div class="card-body p-3">
            <div class="location d-flex align-items-center">
              <i class="ri-map-pin-fill"></i>
              <span class="ms-2 fz-12 fw-semibold" id="platform-name"
                >Vending <%= platform.name %></span
              >
            </div>
            <div class="text-center mt-5">
              <img
                src="/assets/img/vending.svg"
                class="img-fluid w-50"
                alt="" />
            </div>
            <hr />
            <div class="info-vending m-4">
              <div class="d-flex justify-content-between">
                <div class="stock text-center">
                  <p class="fz-12 m-0 fw-semibold">20 KG</p>
                  <p class="fz-12 m-0">Sisa Stock</p>
                </div>
                <div class="status text-center">
                  <p class="fz-12 m-0 fw-semibold text-success">Normal</p>
                  <p class="fz-12 m-0">Status Mesin</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <p class="fw-semibold fz-14 mt-4 ms-2">Pilih Produk</p>

        <div class="variant row" style="margin: 0">
          <div class="col-6 mt-2">
            <div class="card shadow border-transparent item" data-value="1">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <img
                    src="/assets/img/PADI.svg"
                    class="img-fluid"
                    style="width: 15px"
                    alt="" />
                  <span class="ms-4 fz-12 fw-semibold">1 Kilogram</span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-6 mt-2">
            <div class="card shadow border-transparent item" data-value="2">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <img
                    src="/assets/img/PADI.svg"
                    class="img-fluid"
                    style="width: 15px"
                    alt="" />
                  <span class="ms-4 fz-12 fw-semibold">2 Kilogram</span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-6 mt-2">
            <div class="card shadow border-transparent item" data-value="3">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <img
                    src="/assets/img/PADI.svg"
                    class="img-fluid"
                    style="width: 15px"
                    alt="" />
                  <span class="ms-4 fz-12 fw-semibold">3 Kilogram</span>
                </div>
              </div>
            </div>
          </div>
          <div class="col-6 mt-2">
            <div class="card shadow border-transparent item" data-value="4">
              <div class="card-body">
                <div class="d-flex align-items-center">
                  <img
                    src="/assets/img/PADI.svg"
                    class="img-fluid"
                    style="width: 15px"
                    alt="" />
                  <span class="ms-4 fz-12 fw-semibold">4 Kilogram</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="payment-info" style="margin-bottom: 100px">
          <p class="fw-semibold fz-14 mt-4 ms-2">Detail Pesanan</p>
          <div class="row m-0 mt-4">
            <div class="col-4">
              <p class="fz-12">Beras</p>
            </div>
            <div class="col-4">
              <p class="fz-12" id="varian">1 Kilogram</p>
              <p class="fz-12 fw-semibold">Total Pembayaran</p>
            </div>
            <div class="col-4 text-center">
              <p class="fz-12" id="harga-varian">-</p>
              <p class="fz-12" id="total">-</p>
            </div>
          </div>
        </div>
      </div>
      <div class="sticky-button">
        <button
          class="btn w-100 p-3 text-light text-center fz-14 border-0"
          style="background-color: #06b422"
          id="bayar">
          <h2 class="m-0">BAYAR</h2>
        </button>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>

    <script>
      const _id = '<%= platform._id %>';
      const name = '<%= platform.name %>';
      const slug = '<%= platform.slug %>';
      const price = '<%= platform.price %>';

      document.getElementById('platform-name').innerText = name;

      document.querySelectorAll('.item').forEach((item) => {
        item.addEventListener('click', function () {
          document.querySelectorAll('.item').forEach((item) => {
            item.classList.add('border-transparent');
            item.classList.remove('active');
          });
          item.classList.add('active');
          item.classList.remove('border-transparent');

          let value = item.getAttribute('data-value');
          let harga = value * price;
          document.getElementById('varian').innerText = value + ' Kilogram';
          document.getElementById('harga-varian').innerText =
            'Rp ' + harga.toLocaleString('id-ID');
          document.getElementById('total').innerText =
            'Rp ' + harga.toLocaleString('id-ID');
        });
      });

      document.getElementById('bayar').addEventListener('click', function () {
        const amount = document
          .querySelector('.item.active')
          .getAttribute('data-value');

        fetch('/api/transaction/create', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            platform_id: _id,
            amount: amount,
          }),
        })
          .then((res) => {
            return res.json();
          })
          .then((res) => {
            if (res.status === 'success') {
              window.location.href = res.data.payment_url;
            }
          });
      });
    </script>
  </body>
</html>
